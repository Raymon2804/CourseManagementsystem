<!DOCTYPE html>
<html>
<head>
  <title>Hide Text Example</title>
  <style>
    #text-to-hide {
      font-size: 1.2rem;
      margin-bottom: 10px;
    }
    button {
      padding: 8px 16px;
      border: none;
      background: gold;
      color: #191442;
      font-weight: bold;
      cursor: pointer;
      border-radius: 5px;
      transition: 0.3s;
    }
    button:hover {
      background: orange;
    }
  </style>
</head>
<body>

  <p id="text-to-hide">This is the text that will hide when you click the button.</p>
  <button id="hide-btn">Hide Text</button>

  <script>
    const button = document.getElementById("hide-btn");
    const text = document.getElementById("text-to-hide");

    button.addEventListener("click", () => {
      text.style.display = "none"; // hides the text
    });
  </script>

</body>
</html>
