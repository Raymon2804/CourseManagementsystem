<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Enrolled Courses</title>
  <link rel="stylesheet" href="/stdenroll.css">
</head>
<body>
  <header>
    <h1>Course Management System</h1>
    <a href="/student/course/<%= student.username %>" class="back-to-home">Back to Home</a>
  </header>

  <div class="enrollment">
    <h1>Enrolled Courses</h1>
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Username</th>
          <th>Course</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% stddata.forEach((item, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= item.username %></td>
            <td><%= item.course %></td>
            <td>
              <span class="status <%= item.status %>">
                <%= item.status %>
              </span>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <div id="footer-container">
    <footer>
      <span>@2025</span>
      <span style="color:orange;">| Course Management System |</span>
      <span>All Rights Reserved</span>
    </footer>
  </div>
</body>
</html>
