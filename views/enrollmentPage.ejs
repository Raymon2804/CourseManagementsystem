<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Enrollments</title>
    <link rel="stylesheet" href="/enrollmentPage.css" />
  </head>
  <body>
    <div class="container">
      <header>
        <h1>Course Management System</h1>
        <a href="/teacher/course" class="back-to-home">Back</a>
      </header>
    </div>

    <div class="enrollment">
      <% enrollments.forEach(enroll => { %>
      <tr>
        <td>User: <%= enroll.username %></td>
        <td>Course: <%= enroll.course %></td>
        <td>Status:<% enroll.Status %></td>
        <td>
          <form action="/teacher/enrollment/approve/<%=enroll.id%>"method="post">
            <button type="submit">approve</button>
          </form>
        </td>
        <td>
          <form action="/teacher/enrollment/delete/<%=enroll.id%>"method="post">
            <button type="submit">delete</button>
          </form>
        </td>
      </tr>

      <% }) %>
    </div>

    <!-- footer -->
    <div id="footer-container">
      <footer>
        <span>@2025</span>
        <span style="color: orange">| Course Management System |</span>
        <span>All Rights Reserved</span>
      </footer>
    </div>
  </body>
</html>
