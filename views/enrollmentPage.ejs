<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Enrollments</title>
    <link rel="stylesheet" href="/enrollmentPage.css" />
  </head>
  <body>
    <div class="container">
      <header>
        <h1>Course Management System</h1>
        <a href="/teacher/course" class="back-to-home">Back</a>
      </header>
    </div>

    <div class="enrollment-section">

      <!-- Pending Enrollments -->
      <div class="enrollment">
        <h2>Pending Enrollments</h2>
        <table>
          <tr>
            <th>User</th>
            <th>Course</th>
            <th>Status</th>
            <th>Approve</th>
            <th>Delete</th>
          </tr>
          <% enrollments.forEach(enroll => { %>
            <% if(enroll.status !== "approved"){ %>
              <tr class="enroll-row">
                <td><%= enroll.username %></td>
                <td><%= enroll.course %></td>
                <td><%= enroll.status %></td>
                <td>
                  <form action="/teacher/enrollment/approve/<%= enroll.id %>" method="post">
                    <button type="submit" class="approvebtn">Approve</button>
                  </form>
                </td>
                <td>
                  <form action="/teacher/enrollment/delete/<%= enroll.id %>" method="post">
                    <button type="submit">Delete</button>
                  </form>
                </td>
              </tr>
            <% } %>
          <% }) %>
        </table>
      </div>

      <!-- Approved Enrollments -->
      <div class="enrollment">
        <h2>Approved Enrollments</h2>
        <table>
          <tr>
            <th>User</th>
            <th>Course</th>
            <th>Status</th>
            <th>Delete</th>
          </tr>
          <% enrollments.forEach(enroll => { %>
            <% if(enroll.status === "approved"){ %>
              <tr class="enroll-row">
                <td><%= enroll.username %></td>
                <td><%= enroll.course %></td>
                <td><%= enroll.status %></td>
                <td>
                  <form action="/teacher/enrollment/delete/<%= enroll.id %>" method="post">
                    <button type="submit">Delete</button>
                  </form>
                </td>
              </tr>
            <% } %>
          <% }) %>
        </table>
      </div>

    </div>

    <!-- JS to hide row on approve -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        document.querySelectorAll(".approvebtn").forEach(btn => {
          btn.addEventListener("click", e => {
            const row = btn.closest("tr");
            if(row) row.style.display = "none";
          });
        });
      });
    </script>

  </body>
</html>
